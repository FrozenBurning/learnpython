
rows = int(input("please input rows:"))
for i in range(0, rows):
    for k in range(0, rows):
        if i != 0 and i != rows - 1:
            if k == 0 or k == rows - 1:
                #由于视觉效果看起来更像正方形，所以这里*两侧加了空格，增大距离
                print(" * ",end='') #注意这里的","，一定不能省略，可以起到不换行的作用
            else:
                 print ("   ",end='') #该处有三个空格
        else:
            print (" * ",end='') #这里*两侧加了空格
    print ("\n")